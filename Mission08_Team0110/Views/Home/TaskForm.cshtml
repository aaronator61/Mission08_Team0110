@{
    ViewData["Title"] = "Task Form";
}


@model Mission08_Team0110.Models.ApplicationResponse

<h2>Task Form</h2>
<br /><br />

<div>
    Form to add in tasks to the database
    <form method="post">
        <input type="hidden" asp-for="taskId" />

        <div asp-validation-summary="All"></div>

        <label asp-for="task">Task:</label>
        <input asp-for="task" />
        <br /><br />

        <label asp-for="DueDate">Due Date:</label>
        <input asp-for="DueDate" />
        <br /><br />

        <label asp-for="Quadrant">Quadrant:</label>
        <input asp-for="Quadrant" />
        <br /><br />

        <label asp-for="CategoryId">Category:</label>
        <select asp-for="CategoryId">
            <option>Select a Category</option>
            <option>Values will go here once model is connected</option>
            
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
            <option value="@c.Id">@c.CatName</option>
            }
            
        </select>
        <br /><br />

        <label asp-for="Completed">Completed:</label>
        <select asp-for="Completed">
            <option></option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
        <br /><br />

        <button type="submit">Submit Task</button>
    </form>
</div>