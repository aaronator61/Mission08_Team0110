@{
    ViewData["Title"] = ViewBag.Title;
}


@model Mission08_Team0110.Models.ApplicationResponse

<h2>@ViewBag.Title</h2>
<br /><br />

<div>
    <!--Form to add in tasks to the database-->
    <form method="post">
        <input type="hidden" asp-for="TaskId" />

        <div asp-validation-summary="All"></div>

        <label asp-for="Task">Task:</label>
        <input asp-for="Task" />
        <br /><br />

        <label asp-for="DueDate">Due Date:</label>
        <input asp-for="DueDate" />
        <br /><br />

        <label asp-for="Quadrant">Quadrant:</label>
        <input asp-for="Quadrant" />
        <br /><br />

        <label asp-for="CategoryId">Category:</label>
        <select asp-for="CategoryId">
           
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
            <option value="@c.CategoryId">@c.CategoryName</option>
            }
            
        </select>
        <br /><br />

        <label asp-for="Completed">Completed:</label>
        <select asp-for="Completed">
            <option></option>
            <option value=True>Yes</option>
            <option value=False>No</option>
        </select>
        <br /><br />

        <button type="submit">Submit Task</button>
    </form>
</div>